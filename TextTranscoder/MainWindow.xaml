    WindowStartupLocation="CenterScreen"
    DataContext="{Binding Source={StaticResource MainWindowVM}}"
    d:DataContext="{d:DesignInstance Type=local:MainWindowVM}"
    Title="文本转码器"
    MinHeight="450"
